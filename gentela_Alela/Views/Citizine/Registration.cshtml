@using gentela_Alela.Views.View_Model
@model RegistrationVM
@{
    ViewData["Title"] = "Registration Page";
}
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Form Elements</h3>  
            </div>
            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Form Design <small>different form elements</small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a href="#">Settings 1</a>
                                    </li>
                                    <li>
                                        <a href="#">Settings 2</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left" method="post" enctype="multipart/form-data">

                            <input asp-for="registrationReg.Id" type="hidden" class="form-control col-md-7 col-xs-12">

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                    First Name <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input asp-for="registrationReg.Name" type="text" required="required" class="form-control col-md-7 col-xs-12">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Date Of Brith <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input asp-for="registrationReg.Dob" type="date" required="required" class="form-control col-md-7 col-xs-12">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Email</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input asp-for="registrationReg.Email" class="form-control col-md-7 col-xs-12" type="email">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">Password</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input asp-for="registrationReg.Password" class="form-control col-md-7 col-xs-12" type="text">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">Gender</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <div id="gender" class="btn-group" data-toggle="buttons">
                                        <label class="btn btn-default">
                                            <input asp-for="registrationReg.Gender" type="radio" value="Male" autocomplete="off"> Male
                                        </label>
                                        <label class="btn btn-default">
                                            <input asp-for="registrationReg.Gender" type="radio" value="Female" autocomplete="off"> Female
                                        </label>
                                    </div>
                                    <span asp-validation-for="registrationReg.Gender" class="text-danger"></span>
                                </div>
                            </div>



                            <div class="form-group">
                                <label asp-for="registrationReg.ProfileImage" class="control-label col-md-3 col-sm-3 col-xs-12">Profile Image</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input asp-for="registrationReg.ProfileImage" type="file" name="fileProfileImage" id="fileProfileImage"
                                           class="form-control"
                                           style="width: 100%;"
                                           accept="image/*" />
                                    <span class="text-danger"></span>
                                </div>
                            </div>

                            <div class="ln_solid"></div>
                            <div class="form-group">    
                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                  
                                    <button class="btn btn-primary" type="reset">Reset</button>
                                    @if (Model.registrationReg.Id == 0)
                                    {
                                        <button type="submit" class="btn btn-success">Submit </button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-danger">update</button>
                                    }
                                    <button type="submit" class="btn btn-secondary" onclick="advanceSearch()">Advance Search</button>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">User Details</h2>
                    <div class="col-12 d-flex justify-content-end">
                        <button class="btn btn-success" id="downloadExcel">
                            Download Excel
                        </button>
                    </div>
                    <table id="dataTable" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>                              
                                <th>Gender</th>
                                <th>DOB</th>
                                <th>Email</th>
                                <th>Password</th>
                                <th>Proofile Image</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div> <!-- end col -->
    </div>
</div>
<!-- /page content -->
@section Scripts{
    <script src="~/js/adminjs/registrationjs.js" asp-append-version="true"></script>
    <script src="~/exceldownloader/excelhelper.js" asp-append-version="true"></script>
    <script src="~/exceldownloader/exceldownloaderjs.js" asp-append-version="true"></script>

}
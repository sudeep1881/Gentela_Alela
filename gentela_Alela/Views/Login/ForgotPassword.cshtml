@using gentela_Alela.Views.View_Model
@model ForgotPasswordVM
@{
    ViewData["Title"] = "Forget Password";
}
<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="clearfix"></div>
        <div class="row" style="min-height: 100vh; display: flex; align-items: center; justify-content: center;">
            <div class="col-md-6 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2><b>Forgot Password?</b> </h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a href="#">Settings 1</a>
                                    </li>
                                    <li>
                                        <a href="#">Settings 2</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        <form class="form-horizontal form-label-left input_mask" asp-action="ForgotPassword" method="post">
                            <div class="form-group has-feedback" style="display: flex; justify-content: center;">
                                <div style="width: 50%; position: relative;">
                                    <input type="text" asp-for="Email" class="form-control has-feedback-left text-center" id="inputSuccess4" placeholder="Email">
                                    <span asp-validation-for="Email" class="fa fa-envelope form-control-feedback left" aria-hidden="true"></span>
                                </div>
                            </div>
                            <div class="ln_solid"></div>
                            <div class="form-group" style="display: flex; justify-content: center;">
                                <button class="btn btn-primary" >Get OTP</button> 
